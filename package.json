{
	"name": "Backend-Node.js",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^3.0.1",
		"bcrypt-nodejs": "^0.0.3",
		"body-parser": "^1.18.3",
		"compression": "^1.7.3",
		"cors": "^2.8.4",
		"dotenv": "^6.0.0",
		"express": "^4.16.3",
		"jsonwebtoken": "^8.3.0",
		"moment": "^2.22.2",
		"multer": "^1.4.0",
		"mysql2": "^1.6.1",
		"nodemon": "^1.18.4",
		"path": "^0.12.7",
		"sequelize": "^4.39.0"
	},
	"scripts": {
		"start": "node index.js",
		"dev": "nodemon index.js",
		"server-delete": "rm -rf node_modules",
		"server-install": "npm install",
		"server-prod": "npm run server-delete && npm run server-install",
		"client-clean": "npm run client-delete --prefix client/material",
		"client-install": "npm install --prefix client/material",
		"client-build": "npm run build --prefix client/material",
		"client-prod": "npm run client-clean && npm run client-install && npm run client-build",
		"deploy": "npm run client-prod && npm run server-prod && npm run start"
	}
}
